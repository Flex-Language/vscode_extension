{
    "comments": {
        "lineComment": "//",
        "blockComment": ["/*", "*/"]
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        { "open": "{", "close": "}" },
        { "open": "[", "close": "]" },
        { "open": "(", "close": ")" },
        { "open": "\"", "close": "\"", "notIn": ["string"] },
        { "open": "'", "close": "'", "notIn": ["string", "comment"] },
        { "open": "/*", "close": " */", "notIn": ["string"] },
        { "open": "'''", "close": "'''", "notIn": ["string"] }
    ],
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "folding": {
        "markers": {
            "start": "^\\s*//\\s*#?region\\b|^\\s*#\\s*region\\b",
            "end": "^\\s*//\\s*#?endregion\\b|^\\s*#\\s*endregion\\b"
        }
    },
    "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)",
    "indentationRules": {
        "increaseIndentPattern": "^((?!\\/\\/).)*(\\{[^}\"']*|\\([^)\"']*|\\[[^\\]\"']*)$",
        "decreaseIndentPattern": "^((?!.*?\\/\\/).*\\*\\/)?\\s*[\\}\\]].*$"
    },
    "onEnterRules": [
        {
            "beforeText": "^\\s*lw\\s+.*\\{\\s*$",
            "action": { "indent": "indent" }
        },
        {
            "beforeText": "^\\s*gher\\s*\\{\\s*$",
            "action": { "indent": "indent" }
        },
        {
            "beforeText": "^\\s*aw\\s+.*\\{\\s*$",
            "action": { "indent": "indent" }
        },
        {
            "beforeText": "^\\s*talama\\s+.*\\{\\s*$",
            "action": { "indent": "indent" }
        },
        {
            "beforeText": "^\\s*talma\\s+.*\\{\\s*$",
            "action": { "indent": "indent" }
        },
        {
            "beforeText": "^\\s*tlma\\s+.*\\{\\s*$",
            "action": { "indent": "indent" }
        },
        {
            "beforeText": "^\\s*karr\\s+.*\\{\\s*$",
            "action": { "indent": "indent" }
        },
        {
            "beforeText": "^\\s*for\\s+.*\\{\\s*$",
            "action": { "indent": "indent" }
        },
        {
            "beforeText": "^\\s*while\\s+.*\\{\\s*$",
            "action": { "indent": "indent" }
        },
        {
            "beforeText": "^\\s*loop\\s+.*\\{\\s*$",
            "action": { "indent": "indent" }
        },
        {
            "beforeText": "^\\s*sndo2\\s+.*\\{\\s*$",
            "action": { "indent": "indent" }
        },
        {
            "beforeText": "^\\s*sando2\\s+.*\\{\\s*$",
            "action": { "indent": "indent" }
        },
        {
            "beforeText": "^\\s*fn\\s+.*\\{\\s*$",
            "action": { "indent": "indent" }
        },
        {
            "beforeText": "^\\s*fun\\s+.*\\{\\s*$",
            "action": { "indent": "indent" }
        },
        {
            "beforeText": "^\\s*function\\s+.*\\{\\s*$",
            "action": { "indent": "indent" }
        }
    ]
}
